<!-- views/updateUser.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
<body>
  <h1><%= title %></h1>
  <%- include("./partials/errors.ejs") %> <!-- renders errors if filled out incorrectly -->
  <form action="/<%= user.id %>/update" method="POST">
    <input type="text" name="firstName" value="<%= user.firstName %>" required>
    <input type="text" name="lastName" value="<%= user.lastName %>" required>
    <input type="email" name="email" value=<% user.email %> required>
    <input type="number" min="18" max="120" value=<% user.age %>>
    <textarea name="bio" id="bio" value=<% user.bio %> maxlength="200"></textarea>
    <button type="submit">Update User</button>
  </form>
  <a href="/">Back to home</a>
</body>
</html>
